<!DOCTYPE html>
<html>
<head>
  <title><%= @page_title %> | Roam &amp; Gauge</title>
  <%= stylesheet_link_tag 'style', 'admin_style', 'lightview.css' %>
  <%= javascript_include_tag  'jquery', 'jquery_ujs', 'lightview_jq', 'excanvas', 'spinners', 'moo_tools', 'prototype' %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="admin_bodywrap">	
<div id="header">
	<% if !flash[:notice].blank? %>
		<div id="flash" class="notice">
			<% flash.each do |name, msg| %>
		    <%= content_tag :div, msg, :id => "flash_#{name}" %>
		  <% end %>
		<% flash.discard(:notice) %>
		</div>
	<% end %>
	

<div id="login" class="float_right">
<% if session[:user_id] %>
	<div class="">
		Logged in as: <%= link_to(session[:username], users_path) %>&nbsp;|&nbsp;
		<%= link_to('Log Out', logout_url) %>
	</div><!-- end login -->
<% else %>
	<div class="float_right">
		<%= link_to('Login', :controller => 'admin', :action => 'login') %>
	</div><!-- end logout -->
<% end %>

</div><!-- end login div -->
<div class="clear"></div>
	
	
<div id="title">
	<h1><%= link_to('ROAM & GAUGE', :controller => 'public') %><h1>
</div><!-- end title -->
</div><!-- end header -->

<div id="content">
<%= yield %>
</div><!-- end content -->
<div class="clear"></div>
</div><!-- end bodywrap div -->
<div id="admin_footer">
<%= link_to('admin area', admin_menu_url) %> | <%= link_to('admin components', components_url) %>
</div>

</body>
</html>

